{
  "$schema": "http://json-schema.org/schema",
  "id": "new-app",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Application name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the name of your new application?"
    },
    "codeOwners": {
      "type": "string",
      "description": "Codeowners of the new application",
      "x-prompt": "Who are the Codeowners of the new application?",
      "default": "@gitlab_user"
    },
    "deploymentJob": {
      "type": "string",
      "description": "Path to your deployment job",
      "x-prompt": "What is the path to your deployment job? You can add it later as well.",
      "default": "/project-group/app-name-deployment/branch"
    }
  },
  "required": ["name"]
}
