{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/legal-pages/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "libs/shared/ui/legal-pages/tsconfig.lib.json",
        "project": "libs/shared/ui/legal-pages/ng-package.json",
        "tailwindConfig": "libs/shared/ui/legal-pages/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/legal-pages/tsconfig.lib.prod.json"
        }
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/shared/ui/legal-pages"],
      "options": {
        "jestConfig": "libs/shared/ui/legal-pages/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/legal-pages/src/**/*.ts",
          "libs/shared/ui/legal-pages/src/**/*.html"
        ]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/legal-pages/checkstyle.xml",
          "force": true
        }
      }
    },
    "standard-version": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx standard-version --no-verify {args.params}",
        "cwd": "libs/shared/ui/legal-pages"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npm publish dist/libs/shared/ui/legal-pages --tag latest"
          }
        ]
      }
    }
  },
  "tags": ["scope:shared", "type:ui"]
}
