{
  "name": "shared-ui-picture-card",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/picture-card/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "options": {
        "tsConfig": "libs/shared/ui/picture-card/tsconfig.lib.json",
        "project": "libs/shared/ui/picture-card/ng-package.json",
        "tailwindConfig": "libs/shared/ui/picture-card/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/picture-card/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/picture-card/src/**/*.ts",
          "libs/shared/ui/picture-card/src/**/*.html"
        ]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/picture-card/checkstyle.xml",
          "force": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/shared/ui/picture-card"],
      "options": {
        "jestConfig": "libs/shared/ui/picture-card/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/picture-card --tag latest"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "picture-card-v",
        "changelogHeader": "# Release Notes of Library Shared UI Picture Card",
        "commitMessageFormat": "chore(${projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  },
  "tags": ["scope:shared", "type:ui"],
  "implicitDependencies": ["shared-ui-styles"]
}
