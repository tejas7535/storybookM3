{
  "name": "shared-ui-view-toggle",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/view-toggle/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/shared/ui/view-toggle"],
      "options": {
        "project": "libs/shared/ui/view-toggle/ng-package.json",
        "tailwindConfig": "libs/shared/ui/view-toggle/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/view-toggle/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/shared/ui/view-toggle/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/shared/ui/view-toggle"],
      "options": {
        "jestConfig": "libs/shared/ui/view-toggle/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/view-toggle/**/*.ts",
          "libs/shared/ui/view-toggle/**/*.html"
        ]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/view-toggle/checkstyle.xml",
          "force": true
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/view-toggle --tag latest"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "view-toggle-v",
        "changelogHeader": "# Release Notes of Library Shared UI View Toggle",
        "commitMessageFormat": "chore(${projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  },
  "tags": ["scope:shared", ""]
}
