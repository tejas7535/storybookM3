{
  "name": "shared-ui-storybook",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/ui/storybook/src",
  "projectType": "library",
  "generators": {},
  "targets": {
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/shared/ui/storybook/.storybook",
        "browserTarget": "shared-ui-storybook:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputDir": "dist/storybook/shared-ui-storybook",
        "configDir": "libs/shared/ui/storybook/.storybook",
        "browserTarget": "shared-ui-storybook:build-storybook",
        "compodoc": false,
        "styles": [
          "libs/shared/ui/storybook/src/styles.scss",
          "node_modules/@fontsource/material-icons/400.css",
          "node_modules/@fontsource/noto-sans/400.css",
          "node_modules/@fontsource/noto-sans/500.css"
        ]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "storybook-v",
        "changelogHeader": "# Release Notes of Library Shared UI Storybook",
        "commitMessageFormat": "chore(${projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["shared-ui-styles"]
}
