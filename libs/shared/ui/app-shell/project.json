{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/app-shell/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "libs/shared/ui/app-shell/tsconfig.lib.json",
        "project": "libs/shared/ui/app-shell/ng-package.json",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "tailwindConfig": "libs/shared/ui/app-shell/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/app-shell/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/app-shell/src/**/*.ts",
          "libs/shared/ui/app-shell/src/**/*.html"
        ]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/app-shell/checkstyle.xml",
          "force": true
        }
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/shared/ui/app-shell/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["coverage/libs/shared/ui/app-shell"]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/app-shell --tag latest"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "app-shell-v",
        "changelogHeader": "# Release Notes of Library Shared UI App Shell",
        "commitMessageFormat": "chore(${projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  },
  "generators": {
    "@nrwl/angular:component": {
      "style": "scss"
    }
  },
  "tags": ["scope:shared", "type:ui"]
}
