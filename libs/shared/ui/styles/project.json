{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/styles/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/ui/styles",
        "main": "libs/shared/ui/styles/src/index.ts",
        "tsConfig": "libs/shared/ui/styles/tsconfig.lib.json",
        "assets": [
          "libs/shared/ui/styles/**/*.js",
          "libs/shared/ui/styles/**/*.scss",
          "libs/shared/ui/styles/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/shared/ui/styles/src/**/*.js"]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/styles/checkstyle.xml",
          "force": true
        }
      }
    },
    "standard-version": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx standard-version --no-verify {args.params}",
        "cwd": "libs/shared/ui/styles"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/styles --tag latest"
          }
        ]
      }
    }
  },
  "tags": ["scope:shared", "type:styles"]
}
