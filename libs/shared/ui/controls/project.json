{
  "name": "shared-ui-controls",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/controls/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "options": {
        "tsConfig": "libs/shared/ui/controls/tsconfig.lib.json",
        "project": "libs/shared/ui/controls/ng-package.json",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "tailwindConfig": "libs/shared/ui/controls/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/controls/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/controls/src/**/*.ts",
          "libs/shared/ui/controls/src/**/*.html"
        ]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/controls/checkstyle.xml",
          "force": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/shared/ui/controls"],
      "options": {
        "jestConfig": "libs/shared/ui/controls/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/controls --tag latest"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "controls-v",
        "changelogHeader": "# Release Notes of Library Shared UI Controls",
        "commitMessageFormat": "chore(${projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  },
  "tags": ["scope:shared", "type:ui"],
  "implicitDependencies": ["shared-ui-styles"]
}
