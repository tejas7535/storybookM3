{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/share-button/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["dist/libs/shared/ui/share-button"],
      "options": {
        "project": "libs/shared/ui/share-button/ng-package.json",
        "tailwindConfig": "libs/shared/ui/share-button/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/share-button/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/shared/ui/share-button/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/shared/ui/share-button"],
      "options": {
        "jestConfig": "libs/shared/ui/share-button/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/share-button/src/**/*.ts",
          "libs/shared/ui/share-button/src/**/*.html"
        ]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/share-button/checkstyle.xml",
          "force": true
        }
      }
    },
    "standard-version": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx standard-version --no-verify {args.params}",
        "cwd": "libs/shared/ui/share-button"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/share-button --tag latest"
          }
        ]
      }
    }
  },
  "tags": ["scope:shared", ""]
}
