{
  "name": "shared-ui-share-button",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/share-button/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/shared/ui/share-button"],
      "options": {
        "project": "libs/shared/ui/share-button/ng-package.json",
        "tailwindConfig": "libs/shared/ui/share-button/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/share-button/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/shared/ui/share-button/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/shared/ui/share-button"],
      "options": {
        "jestConfig": "libs/shared/ui/share-button/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/share-button/checkstyle.xml",
          "force": true
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/share-button --tag latest"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "share-button-v",
        "changelogHeader": "# Release Notes of Library Shared UI Share Button",
        "commitMessageFormat": "chore({projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  },
  "tags": ["scope:shared", ""]
}
