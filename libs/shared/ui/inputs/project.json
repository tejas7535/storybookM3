{
  "name": "shared-ui-inputs",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "prefix": "schaeffler",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/inputs/src",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "build": {
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/inputs/tsconfig.lib.prod.json"
        }
      },
      "executor": "@nx/angular:package",
      "options": {
        "project": "libs/shared/ui/inputs/ng-package.json",
        "tailwindConfig": "libs/shared/ui/inputs/tailwind.config.js",
        "tsConfig": "libs/shared/ui/inputs/tsconfig.lib.json"
      }
    },
    "lint": {
      "configurations": {
        "ci": {
          "force": true,
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/inputs/checkstyle.xml"
        }
      },
      "executor": "@nx/eslint:lint"
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/ui/inputs --tag latest"
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/shared/ui/inputs/jest.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage/libs/shared/ui/inputs"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "inputs-v",
        "changelogHeader": "# Release Notes of Library Shared UI Inputs",
        "commitMessageFormat": "chore(${projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  }
}
