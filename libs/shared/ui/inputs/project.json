{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "prefix": "schaeffler",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/inputs/src",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "build": {
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/ui/inputs/tsconfig.lib.prod.json"
        }
      },
      "executor": "@nrwl/angular:package",
      "options": {
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "project": "libs/shared/ui/inputs/ng-package.json",
        "tailwindConfig": "libs/shared/ui/inputs/tailwind.config.js",
        "tsConfig": "libs/shared/ui/inputs/tsconfig.lib.json"
      }
    },
    "lint": {
      "configurations": {
        "ci": {
          "force": true,
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/ui/inputs/checkstyle.xml"
        }
      },
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/shared/ui/inputs/**/*.ts",
          "libs/shared/ui/inputs/**/*.html"
        ]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npm publish dist/libs/shared/ui/inputs --tag latest"
          }
        ]
      }
    },
    "standard-version": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx standard-version --no-verify {args.params}",
        "cwd": "libs/shared/ui/inputs"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/shared/ui/inputs/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["coverage/libs/shared/ui/inputs"]
    }
  }
}
