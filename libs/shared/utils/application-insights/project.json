{
  "name": "shared-utils-application-insights",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/utils/application-insights/src",
  "prefix": "schaeffler",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "options": {
        "tsConfig": "libs/shared/utils/application-insights/tsconfig.lib.json",
        "project": "libs/shared/utils/application-insights/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/utils/application-insights/tsconfig.lib.prod.json"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/libs/shared/utils/application-insights/checkstyle.xml",
          "force": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/shared/utils/application-insights/jest.config.ts"
      },
      "outputs": [
        "{workspaceRoot}/coverage/libs/shared/utils/application-insights"
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm publish dist/libs/shared/utils/application-insights --tag latest"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "application-insights-v",
        "changelogHeader": "# Release Notes of Library Shared Utils Application Insights",
        "commitMessageFormat": "chore({projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": []
      }
    }
  },
  "generators": {},
  "tags": ["scope:shared", "type:utils"]
}
