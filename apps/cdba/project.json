{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@nrwl/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "apps/cdba/src",
  "prefix": "cdba",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/cdba",
        "index": "apps/cdba/src/index.html",
        "main": "apps/cdba/src/main.ts",
        "polyfills": "apps/cdba/src/polyfills.ts",
        "tsConfig": "apps/cdba/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/cdba/src/favicon.ico", "apps/cdba/src/assets"],
        "styles": [
          "apps/cdba/src/styles.scss",
          "node_modules/@fontsource/material-icons/400.css",
          "node_modules/@fontsource/roboto/300.css",
          "node_modules/@fontsource/roboto/400.css",
          "node_modules/@fontsource/roboto/500.css"
        ],
        "scripts": [],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/shared/ui/styles/src"]
        },
        "budgets": [
          {
            "type": "initial",
            "maximumWarning": "2mb",
            "maximumError": "6mb"
          },
          {
            "type": "anyComponentStyle",
            "maximumWarning": "6kb",
            "maximumError": "10kb"
          }
        ],
        "customWebpackConfig": {
          "path": "apps/cdba/webpack.config.js"
        },
        "buildLibsFromSource": false
      },
      "configurations": {
        "local": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "dev": {
          "statsJson": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true,
          "fileReplacements": [
            {
              "replace": "apps/cdba/src/environments/environment.ts",
              "with": "apps/cdba/src/environments/environment.dev.ts"
            }
          ]
        },
        "qa": {
          "outputHashing": "bundles",
          "statsJson": true,
          "fileReplacements": [
            {
              "replace": "apps/cdba/src/environments/environment.ts",
              "with": "apps/cdba/src/environments/environment.qa.ts"
            }
          ]
        },
        "production": {
          "outputHashing": "bundles",
          "fileReplacements": [
            {
              "replace": "apps/cdba/src/environments/environment.ts",
              "with": "apps/cdba/src/environments/environment.prod.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nrwl/angular:webpack-server",
      "options": {
        "browserTarget": "cdba:build"
      },
      "configurations": {
        "local": {
          "browserTarget": "cdba:build:local",
          "proxyConfig": "apps/cdba/proxy.conf.js"
        },
        "dev": {
          "browserTarget": "cdba:build:dev"
        },
        "qa": {
          "browserTarget": "cdba:build:qa"
        },
        "production": {
          "browserTarget": "cdba:build:production"
        }
      },
      "defaultConfiguration": "local"
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/cdba/src/**/*.ts", "apps/cdba/src/**/*.html"]
      },
      "configurations": {
        "ci": {
          "format": "checkstyle",
          "outputFile": "checkstyle/apps/cdba/checkstyle.xml",
          "force": true
        }
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "apps/cdba/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["coverage/apps/cdba"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true,
        "preset": "conventional",
        "baseBranch": "master",
        "tagPrefix": "${target}-v",
        "changelogHeader": "# Release Notes of Cost Database Analytics",
        "commitMessageFormat": "chore(${projectName}): ðŸš€ release version ${version} [CI SKIP]",
        "noVerify": true,
        "postTargets": ["cdba:github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["shared-ui-styles"]
}
