{
  "semanticCommits": true,
  "labels": ["type:dep-update"],
  "lockFileMaintenance": {
    "enabled": false
  },
  "baseBranches": ["master"],
  "ignorePaths": ["libs/**/*"],
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": [
    "^npm ci --ignore-scripts",
    "^npm run generate-readme"
  ],
  "postUpgradeTasks": {
    "commands": ["npm ci --ignore-scripts", "npm run generate-readme"],
    "fileFilters": ["docs/01_description.md", "README.md"]
  },
  "major": {
    "enabled": true
  },
  "minor": {
    "enabled": true
  },
  "patch": {
    "enabled": true
  },
  "packageRules": [
    {
      "packageNames": [
        "@angular/animations",
        "@angular/cdk",
        "@angular/common",
        "@angular/compiler-cli",
        "@angular/compiler",
        "@angular/core",
        "@angular/forms",
        "@angular/language-service",
        "@angular/material",
        "@angular/platform-browser",
        "@angular/platform-browser-dynamic",
        "@angular/router",
        "@angular/service-worker",
        "zone.js"
      ],
      "groupName": "@angular/angular",
      "major": {
        "enabled": false
      }
    },
    {
      "packageNames": [
        "@angular/cli",
        "@angular/pwa",
        "@angular-devkit/architect",
        "@angular-devkit/core",
        "@angular-devkit/build-angular",
        "@angular-devkit/build-ng-packagr",
        "@angular-devkit/schematics",
        "ng-packagr"
      ],
      "groupName": "@angular/angular-cli",
      "major": {
        "enabled": false
      }
    },
    {
      "packageNames": [
        "@nrwl/angular",
        "@nrwl/cli",
        "@nrwl/cypress",
        "@nrwl/eslint-plugin-nx",
        "@nrwl/jest",
        "@nrwl/storybook",
        "@nrwl/workspace",
        "@nrwl/linter"
      ],
      "groupName": "@nrwl/nx",
      "major": {
        "enabled": false
      }
    },
    {
      "packageNames": [
        "@ngrx/component",
        "@ngrx/component-store",
        "@ngrx/effects",
        "@ngrx/entity",
        "@ngrx/router-store",
        "@ngrx/store",
        "@ngrx/store-devtools"
      ],
      "groupName": "ngrx",
      "major": {
        "enabled": false
      }
    },
    {
      "packageNames": ["typescript"],
      "updateTypes": ["patch"]
    },
    {
      "packageNames": ["@types/echarts", "echarts", "ngx-echarts"],
      "groupName": "echarts"
    },
    {
      "packageNames": [
        "@ngneat/transloco",
        "@ngneat/transloco-keys-manager",
        "@ngneat/transloco-locale",
        "@ngneat/transloco-optimize",
        "@ngneat/transloco-persist-lang",
        "@ngneat/transloco-validator"
      ],
      "groupName": "transloco"
    },
    {
      "packageNames": [
        "@storybook/addon-a11y",
        "@storybook/addon-actions",
        "@storybook/addon-backgrounds",
        "@storybook/addon-controls",
        "@storybook/addon-notes",
        "@storybook/addon-storysource",
        "@storybook/addon-viewport",
        "@storybook/angular",
        "@storybook/builder-webpack5",
        "@storybook/manager-webpack5",
        "@storybook/addon-essentials"
      ],
      "groupName": "storybook"
    },
    {
      "packageNames": [
        "@ag-grid-community/angular",
        "@ag-grid-community/all-modules",
        "@ag-grid-enterprise/all-modules"
      ],
      "groupName": "ag-grid"
    },
    {
      "packageNames": [
        "@angular-eslint/eslint-plugin",
        "@angular-eslint/eslint-plugin-template",
        "@angular-eslint/template-parser",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "eslint-config-prettier",
        "eslint-plugin-cypress",
        "eslint-plugin-import",
        "eslint-plugin-jest",
        "eslint-plugin-prettier",
        "eslint-plugin-ngrx",
        "eslint-plugin-unicorn",
        "eslint-plugin-prefer-arrow"
      ],
      "groupName": "eslint",
      "schedule": ["every weekend"]
    },
    {
      "packageNames": ["@azure/msal-browser", "@azure/msal-angular"],
      "groupName": "@azure/msal"
    },
    {
      "packageNames": ["@commitlint/cli", "@commitlint/config-conventional"],
      "groupName": "commitlint"
    }
  ]
}
