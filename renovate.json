{
  "semanticCommits": "enabled",
  "labels": ["type:dep-update"],
  "lockFileMaintenance": {
    "enabled": false
  },
  "baseBranches": ["master"],
  "ignorePaths": ["libs/**/*"],
  "postUpgradeTasks": {
    "commands": ["pnpm run generate-readme"],
    "fileFilters": ["docs/01_description.md", "README.md"]
  },
  "prHourlyLimit": 10,
  "major": {
    "enabled": true
  },
  "minor": {
    "enabled": true
  },
  "patch": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "@angular/animations",
        "@angular/cdk",
        "@angular/common",
        "@angular/compiler-cli",
        "@angular/compiler",
        "@angular/core",
        "@angular/elements",
        "@angular/forms",
        "@angular/material",
        "@angular/material-moment-adapter",
        "@angular/platform-browser",
        "@angular/platform-browser-dynamic",
        "@angular/router",
        "@angular/service-worker",
        "@angular-devkit/build-angular",
        "@angular-devkit/core",
        "@angular-devkit/schematics",
        "@angular/cli",
        "@angular/compiler-cli",
        "@angular/language-service",
        "zone.js"
      ],
      "groupName": "@angular",
      "major": {
        "enabled": false
      }
    },
    {
      "matchPackageNames": [
        "@nx/angular",
        "@nrwl/cli",
        "@nx/cypress",
        "@nx/eslint-plugin",
        "@nx/jest",
        "@nx/storybook",
        "@nx/workspace",
        "@nx/devkit",
        "@nx/js",
        "@nx/eslint"
      ],
      "groupName": "@nx",
      "major": {
        "enabled": false
      }
    },
    {
      "matchPackageNames": [
        "@ngrx/component",
        "@ngrx/component-store",
        "@ngrx/effects",
        "@ngrx/entity",
        "@ngrx/router-store",
        "@ngrx/store",
        "@ngrx/store-devtools"
      ],
      "groupName": "ngrx",
      "major": {
        "enabled": false
      }
    },
    {
      "matchPackageNames": ["typescript"],
      "updateTypes": ["patch"]
    },
    {
      "matchPackageNames": ["@types/echarts", "echarts", "ngx-echarts"],
      "groupName": "echarts"
    },
    {
      "matchPackageNames": [
        "@fontsource/material-icons",
        "@fontsource/noto-sans"
      ],
      "groupName": "fontsource"
    },
    {
      "matchPackageNames": [
        "@jsverse/transloco",
        "@jsverse/transloco-keys-manager",
        "@jsverse/transloco-locale",
        "@jsverse/transloco-optimize",
        "@jsverse/transloco-persist-lang",
        "@jsverse/transloco-validator",
        "@jsverse/transloco-messageformat"
      ],
      "groupName": "transloco"
    },
    {
      "matchPackageNames": [
        "@storybook/addon-a11y",
        "@storybook/addon-actions",
        "@storybook/addon-backgrounds",
        "@storybook/addon-controls",
        "@storybook/addon-notes",
        "@storybook/addon-storysource",
        "@storybook/addon-viewport",
        "@storybook/angular",
        "@storybook/builder-webpack5",
        "@storybook/manager-webpack5",
        "@storybook/addon-docs",
        "@storybook/angular",
        "@storybook/core-common",
        "@storybook/core-server",
        "storybook",
        "storybook-addon-designs",
        "storybook-dark-mode",
        "@storybook/addon-essentials"
      ],
      "groupName": "storybook"
    },
    {
      "matchPackageNames": [
        "ag-grid-angular",
        "ag-grid-community",
        "ag-grid-enterprise"
      ],
      "groupName": "ag-grid"
    },
    {
      "matchPackageNames": [
        "@angular-eslint/eslint-plugin",
        "@angular-eslint/eslint-plugin-template",
        "@angular-eslint/template-parser",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "eslint-config-prettier",
        "eslint-plugin-cypress",
        "eslint-plugin-import",
        "eslint-plugin-jest",
        "eslint-plugin-prettier",
        "eslint-plugin-ngrx",
        "eslint-plugin-unicorn",
        "eslint-plugin-prefer-arrow",
        "eslint-plugin-simple-import-sort",
        "eslint-plugin-storybook",
        "eslint-plugin-unused-imports"
      ],
      "groupName": "eslint",
      "schedule": ["every weekend"]
    },
    {
      "matchPackageNames": ["@azure/msal-browser", "@azure/msal-angular"],
      "groupName": "@azure/msal"
    },
    {
      "matchPackageNames": [
        "tailwindcss",
        "prettier-plugin-tailwindcss",
        "@tailwindcss/typography",
        "postcss",
        "postcss-import",
        "postcss-preset-env",
        "postcss-url"
      ],
      "groupName": "tailwind"
    },
    {
      "matchPackageNames": [
        "jest",
        "jest-canvas-mock",
        "jest-environment-jsdom",
        "jest-junit",
        "jest-preset-angular",
        "@types/jest",
        "@types/testing-library__jest-dom",
        "@testing-library/jest-dom",
        "ts-jest"
      ],
      "groupName": "jest"
    },
    {
      "matchPackageNames": [
        "@commitlint/cli",
        "@commitlint/config-conventional",
        "@commitlint/cz-commitlint"
      ],
      "groupName": "commitlint"
    },
    {
      "matchPackageNames": ["renovate"],
      "groupName": "renovate",
      "schedule": ["every weekend"]
    }
  ]
}
